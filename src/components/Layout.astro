---
interface Props {
  title?: string;
  frontmatter?: any;
  showBanner?: boolean; // ← これを追加！
}

import Navbar from "./Navbar.astro"; // 1. インポートする
import Footer from "./Footer.astro"; // 1. インポート
import TopBanner from "./TopBanner.astro"; // インポート
import Sidebar from "./Sidebar.astro"; // サイドバーもインポート
import "bootstrap/dist/css/bootstrap.min.css";

const { title, frontmatter, showBanner = true } = Astro.props;
---

<!doctype html>
<html lang="ja/JP">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
    <style>
      @font-face {
        font-family: "Diana";
        src: url("/fonts/diana-bold.ttf") format("truetype");
        font-weight: bold;
        font-style: normal;
      }
    </style>
    <Navbar />
    <div id="content" class="container my-4">
      {showBanner && <TopBanner />}
      <div class="row">
        <main class="col-md-9">
          <slot />
        </main>
        <aside class="col-md-3">
          <Sidebar />
        </aside>
      </div>
    </div>
    <Footer />

    <script>
      import "bootstrap/dist/js/bootstrap.bundle.min.js";
    </script>
  </body>
</html>
